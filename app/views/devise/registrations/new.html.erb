<h2>註冊</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, label: 'e-mail', required: true, autofocus: true %>
    <%= f.input :password, label: '密碼', required: true, hint: ("最少 #{@minimum_password_length} 個字元" if @minimum_password_length) %>
    <%= f.input :password_confirmation, label: '確認密碼', required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "註冊" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
