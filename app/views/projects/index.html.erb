<p id="notice"><%= notice %></p>

<h1>專案列表
<%= link_to '新增專案', new_project_path, class: 'btn btn-primary' %>
</h1>

<%= paginate @projects, theme:'twitter-bootstrap-3' %>
<table class="table">
  <thead>
    <tr>
      <th>專案名稱</th>
      <th>專案編號</th>
      <th>專案狀態</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.serial %></td>
        <td><%= project.status %></td>
        <td><%= link_to '顯示', project %></td>
        <td><%= link_to '編輯', edit_project_path(project) %></td>
        <td><%= link_to '刪除', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

