<%= simple_form_for(@material) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :cat1, label:'類別一' %>
    <%= f.input :cat2, label:'類別二' %>
    <%= f.input :cat3, label:'類別三' %>
    <%= f.input :cat4, label:'類別四' %>
    <%= f.input :num_sup, label:'供應商貨號' %>
    <%= f.input :serial, label:'材料編號', required: true %>
    <%= f.input :name, label:'材料名稱', required: true %>
    <%= f.input :spec, label:'規格' %>
    <%= f.input :unit, label:'單位' %>
    <%= f.input :supplier, label:'主供應商' %>
    <%= f.input :replenish_policy, label:'補貨政策' %>
    <%= f.input :replenish_period, label:'補貨週期' %>
    <%= f.input :description, label:'描述' %>
    <%= f.input :weight, label:'重量(kg)' %>
    <%= f.input :weight_unit, label:'重量單位' %>
    <%= f.input :memo, label:'備註' %>
    <%= f.input :num_material_drawing, label:'材料圖號' %>
    <%= f.input :min_stock, label:'最低補量' %>
    <%= f.input :pick_unit, label:'領用倍量' %>
    <%= f.input :length, label:'長(cm)' %>
    <%= f.input :width, label:'寬(cm)' %>
    <%= f.input :height, label:'高(cm)' %>
    <%= f.input :lead_time, label:'備貨時間' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "確認", class:'btn btn-success' %>
  </div>
<% end %>
