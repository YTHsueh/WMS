<p id="notice"><%= notice %></p>

<h1>材料列表
<%= link_to '新增材料', new_material_path, class: 'btn btn-primary' %>
</h1>

<%= paginate @materials, theme:'twitter-bootstrap-3' %>
<table class="table">
  <thead>
    <tr>
      <th>材料編號</th>
      <th>材料名稱</th>
      <th>主供應商</th>
      <th>最低補量</th>
      <th>備貨時間</th>
      <th>描述</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @materials.each do |material| %>
      <tr>
        <td><%= material.serial %></td>
        <td><%= material.name %></td>
        <td><%= material.supplier %></td>
        <td><%= material.min_stock %></td>
        <td><%= material.lead_time %></td>
        <td><%= material.description %></td>
        <td><%= link_to '顯示', material %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

