<p id="notice"><%= notice %></p>

<h1>進料單
<%= link_to '新增採購單', new_procure_path, class: 'btn btn-default' %>
</h1>
<%= paginate @procures, theme:'twitter-bootstrap-3' %>

<table class="table">
  <thead>
    <tr>
      <th>採購單號</th>
      <th>進料日期</th>
      <th>備註</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @procures.each do |procure| %>
      <tr>
        <td><%= link_to procure.serial, procure %></td>
        <td><%= procure.date %></td>
        <td><%= procure.note %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

