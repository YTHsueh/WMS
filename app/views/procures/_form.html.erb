<%= simple_form_for(@procure) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :serial %>
    <%= f.input :date %>

  <% if @procure.projects.any? %>
    <%= f.simple_fields_for :projects do |project| %> 
      <%= render 'project_fields', f: project %> 
    <% end %> 
  <% end %> 

    <%= f.input :note %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
