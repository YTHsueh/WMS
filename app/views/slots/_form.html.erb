<%= simple_form_for(@slot) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: '庫位名稱', required: true %>
    <%= f.input :serial, label: '庫位編號', required: true %>
    <%= f.input :position, label: '庫位位置', required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "確認", class:'btn btn-success' %>
  </div>
<% end %>
