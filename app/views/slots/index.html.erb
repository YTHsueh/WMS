<p id="notice"><%= notice %></p>

<h1>庫位列表
<%= link_to '新增庫位', new_slot_path, class: 'btn btn-primary' %>
</h1>

<%= paginate @slots, theme:'twitter-bootstrap-3' %>
<table class="table">
  <thead>
    <tr>
      <th>庫位名稱</th>
      <th>庫位編號</th>
      <th>庫位位置</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @slots.each do |slot| %>
      <tr>
        <td><%= slot.name %></td>
        <td><%= slot.serial %></td>
        <td><%= slot.position %></td>
        <td><%= link_to '顯示', slot %></td>
        <td><%= link_to '編輯', edit_slot_path(slot) %></td>
        <td><%= link_to '刪除', slot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

