<p id="notice"><%= notice %></p>

<h1>庫位列表
<%= link_to '新增庫位', new_slot_path, class: 'btn btn-default' %>
</h1>

<%= paginate @slots, theme:'twitter-bootstrap-3' %>
<table class="table">
  <thead>
    <tr>
      <th>庫位名稱</th>
      <th>庫位編號</th>
      <th>庫位位置</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @slots.each do |slot| %>
      <tr>
        <td><%= link_to slot.name, slot %></td>
        <td><%= slot.serial %></td>
        <td><%= slot.position %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

